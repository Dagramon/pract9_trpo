<Page x:Class="pract7_trpo.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract7_trpo.Pages"
      mc:Ignorable="d" 
      Title="RegisterPage">
    
    <StackPanel x:Name="RegForm" Style="{StaticResource VerticalPanel}">
        <Label Content="Имя"/>
        <TextBox Text="{Binding Name}"/>
        <Label Content="Фамилия"/>
        <TextBox Text="{Binding LastName}"/>
        <Label Content="Отчество"/>
        <TextBox Text="{Binding MiddleName}"/>
        <Label Content="Специализация"/>
        <TextBox Text="{Binding Specialization}"/>
        <Label Content="Пароль"/>
        <TextBox Text="{Binding Password}"/>
        <Label Content="Подтвердите пароль"/>
        <TextBox Text="{Binding RepeatPassword}"/>
        <Button
                Style="{DynamicResource AddButton}"
                Content="Зарегистрироваться" 
                Click="Register_Click"/>
        <Button 
                Content="Войти" 
                Click="BackButton_Click"/>
    </StackPanel>
</Page>
