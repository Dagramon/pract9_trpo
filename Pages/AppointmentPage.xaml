<Page x:Class="pract7_trpo.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract7_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="AppointmentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <Button Content="Назад" Click="BackButton_Click" Style="{DynamicResource BackButton}" DockPanel.Dock="Top"></Button>
            <StackPanel Style="{StaticResource VerticalPanel}">
                <StackPanel>
                    <StackPanel DockPanel.Dock="Right" Style="{StaticResource HorizontalPanel}">
                        <StackPanel>
                            <Label Content="Имя: "></Label>
                            <Label Content="Фамилия: "></Label>
                            <Label Content="Отчество: "></Label>
                            <Label Content="Последний врач: "></Label>
                            <Label Content="Дата рождения"></Label>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="{Binding Name}"></Label>
                            <Label Content="{Binding LastName}"></Label>
                            <Label Content="{Binding MiddleName}"></Label>
                            <Label Content="{Binding LastDoctorName}"></Label>
                            <Label Content="{Binding BirthdayString}"></Label>
                        </StackPanel>
                    </StackPanel>
                    <Label Content="Диагноз:"></Label>
                    <TextBox Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <Label Content="Рекомендации: "></Label>
                    <TextBox Style="{StaticResource BigTextBox}"
                             Text="{Binding Recomendations, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel>
                    <Button
                            Name="EditPatient"
                            Content="Закончить приём"
                            Click="EditPatient_Click"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <StackPanel Grid.Column="1">
            <Label Content="История приёмов: "></Label>
            <ListView
                ItemsSource="{Binding AppointmentStories}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Style="{StaticResource HorizontalPanel}">
                                <TextBlock Text="Дата: "></TextBlock>
                                <TextBlock Text="{Binding dateString}"></TextBlock>
                            </StackPanel>
                            <StackPanel Style="{StaticResource HorizontalPanel}">
                                <TextBlock Text="ID доктора: "></TextBlock>
                                <TextBlock Text="{Binding doctor_id}"></TextBlock>
                            </StackPanel>
                            <StackPanel Style="{StaticResource HorizontalPanel}">
                                <TextBlock Text="Диагноз: "></TextBlock>
                                <TextBlock Text="{Binding diagnosis}"></TextBlock>
                            </StackPanel>
                            <StackPanel Style="{StaticResource HorizontalPanel}">
                                <TextBlock Text="Рекомендации: "></TextBlock>
                                <TextBlock Text="{Binding recomendations}"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
