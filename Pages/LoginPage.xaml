<Page x:Class="pract7_trpo.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract7_trpo.Pages"
      mc:Ignorable="d" 
      Title="LoginPage">
    <StackPanel x:Name="LoginForm" Style="{StaticResource VerticalPanel}">
        <Label Content="ID"/>
        <TextBox Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Пароль"/>
        <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
        <Button
                Name="Login"
                Content="Войти" Click="Login_Click"/>
        <Button 
                Content="Зарегистрироваться" Click="RegButton_Click"/>
    </StackPanel>
</Page>
