<Page x:Class="pract7_trpo.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract7_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
      Title="LoginPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" x:Name="RegForm" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Имя"/>
                <TextBox Text="{Binding Name}"/>
                <Label Content="Фамилия"/>
                <TextBox Text="{Binding LastName}"/>
                <Label Content="Отчество"/>
                <TextBox Text="{Binding MiddleName}"/>
                <Label Content="Специализация"/>
                <TextBox Text="{Binding Specialization}"/>
                <Label Content="Пароль"/>
                <TextBox Text="{Binding Password}"/>
                <Label Content="Подтвердите пароль"/>
                <TextBox Text="{Binding RepeatPassword}"/>
            <Button
                Name="Register" 
                Width="150" Height="25"
                VerticalAlignment="Bottom"
                Content="Зарегистрироваться" 
                Click="Register_Click"/>
            </StackPanel>
        <StackPanel Orientation="Vertical" x:Name="LoginForm" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="ID"/>
                <TextBox Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Пароль"/>
                <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
            <Button
                Name="Login"
                Height="25" Width="150"
                VerticalAlignment="Bottom"
                Content="Войти" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Page>
