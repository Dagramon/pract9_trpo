<Window x:Class="pract7_trpo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract7_trpo"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <DockPanel Style="{DynamicResource MainPanel}">
        <Menu DockPanel.Dock="Top" Height="25">
            <MenuItem Header="Меню" Style="{DynamicResource MenuMain}">
                <MenuItem Header="Настройки">
                    <MenuItem Header="Сменить тему" Click="MenuItem_Click"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" DockPanel.Dock="Top" VerticalAlignment="Center">

        </Frame>
        <StackPanel DockPanel.Dock="Bottom" Background="Gray" Height="50" VerticalAlignment="Bottom" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Количество файлов: "></Label>
                <Label Content="{Binding JSONFiles}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Количество врачей: "></Label>
                <Label Content="{Binding Doctors}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Количество пациентов: "></Label>
                <Label Content="{Binding Patients}"></Label>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
