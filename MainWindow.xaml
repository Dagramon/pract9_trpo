<Window x:Class="pract7_trpo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract7_trpo"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid Style="{DynamicResource MainPanel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Меню" Style="{DynamicResource MenuMain}">
                <MenuItem Header="Настройки">
                    <MenuItem Header="Сменить тему" Click="MenuItem_Click"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
        <Frame x:Name="MainFrame" Grid.Row="1">

        </Frame>
        <StackPanel Style="{StaticResource InfoPanel}" Grid.Row="2">
            <StackPanel Style="{StaticResource InfoPanelItem}">
                <Label Content="Количество файлов: "></Label>
                <Label Content="{Binding JSONFiles}"></Label>
            </StackPanel>
            <StackPanel Style="{StaticResource InfoPanelItem}">
                <Label Content="Количество врачей: "></Label>
                <Label Content="{Binding Doctors}"></Label>
            </StackPanel>
            <StackPanel Style="{StaticResource InfoPanelItem}">
                <Label Content="Количество пациентов: "></Label>
                <Label Content="{Binding Patients}"></Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
