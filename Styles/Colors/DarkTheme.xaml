<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Background" Color="#1c1c1c"/>
    <SolidColorBrush x:Key="Foreground" Color="White"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#378CE0"/>
    <SolidColorBrush x:Key="ButtonBackground" Color="#2B6CB8"/>
    <SolidColorBrush x:Key="ButtonHover" Color="#378CE0"/>
    <SolidColorBrush x:Key="ButtonPressed" Color="#1E4E91"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#2D8AE6"/>

    <SolidColorBrush x:Key="ButtonAddBackground" Color="#289c45"/>
    <SolidColorBrush x:Key="ButtonAddHover" Color="#1b632d"/>
    <SolidColorBrush x:Key="ButtonAddPressed" Color="#485949"/>

    <SolidColorBrush x:Key="ButtonRemoveBackground" Color="#cf3434"/>
    <SolidColorBrush x:Key="ButtonRemoveHover" Color="#852828"/>
    <SolidColorBrush x:Key="ButtonRemovePressed" Color="#4f1919"/>
</ResourceDictionary>